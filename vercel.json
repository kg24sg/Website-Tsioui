{
   "version": 2,
   "buildCommand": "cd client && npm install && npm run build",
   "outputDirectory": "client/build",
   "builds": [
    {
      "src": "./server.js",  // path to your server.js file
      "use": "@vercel/node"
    },
    {
      "src": "./client/build",    // path to your build folder
      "use": "@vercel/static"
    }
   ],
   "routes": [
      { "src": "/(.*)", "dest": "/" }
   ]
}
